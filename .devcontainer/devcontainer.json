{
  "name": "swe-agent",
  "image": "mcr.microsoft.com/devcontainers/base:jammy",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {
      "moby": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1",
    "PIP_DISABLE_PIP_VERSION_CHECK": "1"
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y ripgrep jq && pip install -U pip && pip install swebench datasets anthropic pytest",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "tamasfe.even-better-toml"]
    }
  }
}
